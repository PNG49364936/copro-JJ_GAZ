<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h2>Facture - <%= @facture.periode_budgetaire_nom %> - <%= @facture.periode_nom %></h2>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-3">
            <div class="card text-bg-light">
              <div class="card-body text-center">
                <h6 class="card-subtitle mb-2">Volume</h6>
                <p class="card-text display-6"><%= number_with_precision(@facture.consommation_m3, precision: 2) || "N/A" %> m³</p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card text-bg-light">
              <div class="card-body text-center">
                <h6 class="card-subtitle mb-2">Conso HT</h6>
                <p class="card-text display-6"><%= number_to_currency(@facture.montant_ht, unit: "€", format: "%n %u") if @facture.montant_ht %></p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card text-bg-light">
              <div class="card-body text-center">
                <h6 class="card-subtitle mb-2">Facture TTC</h6>
                <p class="card-text display-6"><%= number_to_currency(@facture.montant_ttc, unit: "€", format: "%n %u") %></p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card text-bg-light">
              <div class="card-body text-center">
                <h6 class="card-subtitle mb-2">Prix/m³</h6>
                <p class="card-text display-6"><%= number_to_currency(@facture.prix_unitaire_m3, unit: "€", format: "%n %u", precision: 4) if @facture.prix_unitaire_m3 %></p>
              </div>
            </div>
          </div>
        </div>

        <% if @facture.notes.present? %>
          <div class="mt-3">
            <h5>Notes</h5>
            <p><%= simple_format(@facture.notes) %></p>
          </div>
        <% end %>
      </div>
      <div class="card-footer">
        <%= link_to "Modifier", edit_facture_path(@facture), class: "btn btn-primary" %>
        <%= link_to "Retour", factures_path, class: "btn btn-secondary" %>
        <%= button_to "Supprimer", @facture, method: :delete, class: "btn btn-danger", data: { turbo_confirm: "Êtes-vous sûr de vouloir supprimer cette facture ?" } %>
      </div>
    </div>
  </div>
</div>
